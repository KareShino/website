---
import { Image } from "astro:assets";
import HeaderNav from "./HeaderNav.astro";

import logo from "@assets/logos/cactus/header.webp";
---

<header>
    <div class="center">
        <a href="/">
            <div class="logo">
                <Image
                    src={logo}
                    alt="CACTUS logo"
                    width={875}
                    height={250}
                    class="logo-img"
                />
            </div>
        </a>
    </div>
    <div class="nav">
        <HeaderNav />
    </div>
</header>

<style>
    header {
        background-color: #31a33d;
        padding-top: 10px;
        padding-bottom: 10px;
        display: grid;
        grid-template-columns: 50% 50%;
    }

    .logo {
        display: flex;
        justify-content: left;
        align-items: center;
        margin: 7px 0;
        margin-left: 25px;
    }

    .logo-img {
        width: 190px;
        height: auto;
    }

    .center {
        text-align: center;
    }

    .nav {
        display: flex;
        justify-content: right;
        align-items: center;
    }

    @media (max-width: 768px) {
        .logo {
            margin: 3px 14px;
        }

        .logo-img {
            width: 130px;
            z-index: 110;
        }
    }
</style>
